<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>My Angular App!</title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script type="text/javascript" src="/javascripts/angularApp.js"></script>
    <style>
      .glyphicon-thumbs-up {
        cursor: pointer;
      }

      .post-text {
        font-size: 20px;
        margin-left: 10px;
      }

      .post-form {
        margin-top: 30px;
      }
    </style>
  </head>
  <body data-ng-app="flapperNews" data-ng-strict-di>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div data-ui-view></div>
      </div>
    </div>

    <!-- ················ HOME TEMPLATE ················ -->
    <script type="text/ng-template" id="/home.html">
      <div class="page-header">
        <h1>Flapper News</h1>
      </div>

      <div data-ng-repeat="post in home.posts | orderBy: '-upvotes'">
        <span data-ng-click="home.incrementUpvotes(post)"
                class="glyphicon glyphicon-thumbs-up" ></span>
        {{post.upvotes}}
        <span style="post-text">
          <a data-ng-show="post.link" href="{{post.link}}">
            {{post.title}}
          </a>
          <span data-ng-hide="post.link">
            {{post.title}}
          </span>
          <span>
            <a href="#/posts/{{post._id}}">Comments</a>
          </span>
        </span>
      </div>

      <form data-ng-submit="home.addPost()" class="post-form">
        <h3>Add a new post</h3>
        <div class="form-group">
          <input type="text"
            placeholder="Title"
            class="form-control"
            data-ng-model="home.title" />
        </div>
        <div class="form-group">
          <input type="text"
            placeholder="Link"
            class="form-control"
            data-ng-model="home.link" />
        </div>

        <button class="btn btn-primary form-control" type="submit">Post</button>
      </form>
    </script>

    <!-- ················ POSTS TEMPLATE ···················· -->
    <script type="text/ng-template" id="/posts.html">
      <div class="page-header">
        <h3>
          <a data-ng-show="posts.post.link" href="{{posts.post.link}}">
            {{posts.post.title}}
          </a>
          <span data-ng-hide="posts.post.link">
            {{posts.post.title}}
          </span>
        </h3>
      </div>

      <div data-ng-repeat="comment in posts.post.comments | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up"
          data-ng-click="posts.incrementUpvotes(comment)"></span>
        {{comment.upvotes}} - by {{comment.author}}
        <span class="post-text">
          {{comment.body}}
        </span>
      </div>

      <form data-ng-submit="posts.addComment()"
        class="post-form">
        <h3>Add a new comment</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Comment"
          data-ng-model="body"></input>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>
    </script>
  </body>
</html>
